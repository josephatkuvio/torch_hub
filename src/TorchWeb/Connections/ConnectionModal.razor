@inherits SparcModal

<div class="connection-library">

    <header>
        <div class="top-text">
            <img src="/images/calendarIcon.svg" />
            <h1>Recently Used Connections</h1>
        </div>
        <div class="bottom-text">
            <h4>Apply a connection recently used in another workflow.</h4>
        </div>
    </header>

    <div class="container-body">
        @if (RecentConnections.Any())
        {
            <table>
                <tr>
                    <th>Connection Name</th>
                    <th>Institution Name</th>
                    <th>Created</th>
                    <th>Action</th>
                </tr>
                @foreach (var connection in RecentConnections)
                {
                    <tr class="table-content">
                        <td>Connection Name</td>
                        <td>Institution Name</td>
                        <td>08/04/2023</td>
                        <td class="btn"><button @onclick="@(() => Apply(connection))">Apply Connection</button></td>
                    </tr>
                }
            </table>
        }
    </div>

    <button class="close-btn" @onclick=Cancel>Close</button>
</div>

@code {
    List<Connection> RecentConnections = new();

    async Task Apply(Connection connection)
    {
        await Ok(connection);
    }
}