<header class="status-header">
    <h1>Status</h1>
</header>

<section>
    <article class="status-board">
        <section>
            <img class="status-img" src="/images/completionIcon.svg" />
            <div class="status-board-text">
                <h3>Completion</h3>
                <h1>75<span>%</span></h1>
            </div>
        </section>
        <section>
            <img class="status-img" src="/images/hourglassIcon.svg" />
