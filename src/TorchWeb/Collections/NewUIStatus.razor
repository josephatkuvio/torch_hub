            <div class="status-board-text">
                <h3>Processing</h3>
                <h1>840 <span>files</span></h1>
            </div>
        </section>
        <section>
            <img class="status-img" src="/images/errorIcon.svg" />
            <div class="status-board-text">
                <h3>Error</h3>
                <h1>1 <span>files</span></h1>
            </div>
        </section>
    </article>
</section>

