@page "/"
@using Microsoft.AspNetCore.Components.Web
@using Torch.Web;
@namespace Torch.Web.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>TorchWeb</title>
    <base href="/" />
    <link rel="stylesheet" type="text/css" href="https://api.kodekit.io/fifers-antipatriarchy.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@500&display=swap" rel="stylesheet">
    <link href="css/app.css" rel="stylesheet" />
    <link href="Torch.Web.styles.css" rel="stylesheet">
    <link rel="icon" type="image/png" href="favicon.png" />
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body>
    <component type="typeof(App)" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
    <script>
        window.triggerClick = (elt) => elt.click();
        window.upload = (elt, action) => {
            let formData = new FormData();
            let files = elt.files;
            for (var i = 0; i < files.length; i++)
                formData.append('file', files[i]);
            fetch(action, { method: 'POST', body: formData });
        };

        function ctrlKeyPressed() {
            return event.ctrlKey;
        }
    </script>
</body>
</html>
