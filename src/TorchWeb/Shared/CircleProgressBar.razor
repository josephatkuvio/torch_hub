<figure>
    <svg viewBox="0 0 120 120">
        <circle class="background upload" cx="60" cy="60" r="54" pathLength="100" stroke-dasharray="100" />
        <circle class="background process" cx="60" cy="60" r="36" pathLength="100" stroke-dasharray="100" />
        <circle class="background transfer" cx="60" cy="60" r="18" pathLength="100" stroke-dasharray="100" />

        @if (UploadPercentage > 0)
        {
            <circle class="upload" cx="60" cy="60" r="54" pathLength="100" stroke-dasharray="100" style="stroke-dashoffset: calc(100 - @UploadPercentage)" />
        }

        @if (ProcessPercentage > 0)
        {
            <circle class="process" cx="60" cy="60" r="36" pathLength="100" stroke-dasharray="100" style="stroke-dashoffset: calc(100 - @ProcessPercentage)" />
        }

        @if (TransferPercentage > 0)
        {
            <circle class="transfer" cx="60" cy="60" r="18" pathLength="100" stroke-dasharray="100" style="stroke-dashoffset: calc(100 - @TransferPercentage)" />
        }
    </svg>
</figure>

@code {
    [Parameter] public decimal UploadPercentage { get; set; }
    [Parameter] public decimal ProcessPercentage { get; set; }
    [Parameter] public decimal TransferPercentage { get; set; }
}
