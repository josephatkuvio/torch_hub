<figure>
    <svg viewBox="0 0 120 120">
        <circle class="background upload" cx="60" cy="60" r="54" />
        <circle class="background process" cx="60" cy="60" r="36" />
        <circle class="background transfer" cx="60" cy="60" r="18" />

        <circle class="upload" cx="60" cy="60" r="54" pathLength="100" style="stroke-dashoffset: calc(100 - @UploadPercentage)" />

        <circle class="process" cx="60" cy="60" r="36" pathLength="100" style="stroke-dashoffset: calc(100 - @ProcessPercentage)" />

        <circle class="transfer" cx="60" cy="60" r="18" pathLength="100" style="stroke-dashoffset: calc(100 - @TransferPercentage)" />
    </svg>
</figure>

@code {
    [Parameter] public decimal UploadPercentage { get; set; }
    [Parameter] public decimal ProcessPercentage { get; set; }
    [Parameter] public decimal TransferPercentage { get; set; }
}
